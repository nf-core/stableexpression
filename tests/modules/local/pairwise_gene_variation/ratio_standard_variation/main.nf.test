nextflow_process {

    name "Test Process RATIO_STANDARD_VARIATION"
    script "modules/local/pairwise_gene_variation/ratio_standard_variation/main.nf"
    process "RATIO_STANDARD_VARIATION"
    tag "ratio_std"
    tag "module"

    test("Should run without failures") {

        when {
            process {
                """
                file = file( '$projectDir/tests/data/pairwise_gene_variation/expression_ratio/output/ratios.parquet', checkIfExists: true)
                input[0] = file
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
