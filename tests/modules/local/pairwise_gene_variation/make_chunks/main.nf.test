nextflow_process {

    name "Test Process MAKE_CHUNKS"
    script "modules/local/pairwise_gene_variation/make_chunks/main.nf"
    process "MAKE_CHUNKS"
    tag "make_chunks"
    tag "module"

    test("Should run without failures") {

        when {
            process {
                """
                ch_counts = Channel.fromPath( '$projectDir/tests/test_data/pairwise_gene_variation/make_chunks/input/counts.parquet', checkIfExists: true)
                input[0] = ch_counts
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()
        }

    }

}
